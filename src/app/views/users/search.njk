{% extends "users/layout.njk" %}

{% block head %}
    <title>Busca | Foodfy</title>
{% endblock head %}


{% block content %}
    <div class="searchWrapper">Buscando por '{{filter}}'</div>

    <div class="cards recipes">
    {% for recipe in recipes %}
        <div class="card" id="{{recipe.id}}">
            <section style="background: url('{{recipe.img}}') no-repeat center center / cover"></section>
            <div class="card-info">
                <p class="recipe-title">{{recipe.title}}</p>
                <p class="recipe-author">por {{recipe.chef_name}}</p>
            </div>
        </div>
    {% endfor %}
    </div>

    <div class="pagination"
        data-page={{pagination.page}}
        data-total={{pagination.total}}
        data-filter={{filter}}
    >
    </div>
{% endblock content %}
