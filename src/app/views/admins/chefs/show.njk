{% extends "../layout.njk" %}

{% block head %}
    <title>{{chef.name}} | Foodfy</title>
{% endblock %}


{% block content %}
<div class="wrapper">
    <h1>Chef: {{chef.name}}</h1>
    <a href="/admin/chefs/{{chef.id}}/edit">Editar chef</a>
</div>

<div class="chef_card">
    <section class="image-container" style="background: url('{{chef.img}}') no-repeat center center / cover";>
    </section>
    <div class="chef_info">
        <h1>{{chef.name}}</h1>
        <p>{{chef.total_recipes}} {{"receita" if chef.total_recipes == 1 else "receitas"}}</p>
    </div>
</div>

<section class="chef_recipes">
    <h2>Receitas</h2>
    <div class="cards">
        {% for recipe in recipes %}
        <div class="card">
            <div class="image-container">
                <img src="{{recipe.img}}" alt="Imagem de {{recipe.title}}">
            </div>
            <div class="card-info">
                <p class="recipe-title">{{recipe.title}}</p>
                <p class="recipe-author">por {{recipe.chef_name}}</p>
                <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
            </div>
        </div>
    {% endfor %}
    </div>
</section>
{% endblock content %}