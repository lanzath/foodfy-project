{% extends 'admins/session/layout.njk'%}

{% block content %}
    <div class="sessionTitle">
        <h1>Nova Senha</h1>
    </div>

    <form id="resetForm" action="/password-reset" method="POST">
        <div class="fields">

            <div class="item">
                <p>Email</p>
                <input type="email" name="email">
            </div>

            <div class="item">
                <p>Nova Senha</p>
                <input type="password" name="password">
            </div>

            <div class="item">
                <p>Repetir Senha</p>
                <input type="password" name="passwordRepeat">
            </div>

            <input type="hidden" name="token" value={{token}}>
        </div>
    </form>

    <div class="buttons">
        <button id="forgotSubmitButton" type="submit" form="resetForm">Nova Senha</button>
    </div>
{% endblock content %}
