{% extends "../layout.njk" %}

{% block head %}
    <title>Cadastrar Usuário | Foodfy</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
{% endblock %}


{% block content %}
    <div class="wrapper">
        <h1>Editando Usuário: {{user.name}}</h1>
        <button type="submit" form="createForm">Salvar usuário</button>
    </div>

    <form id="createForm" action="/admin/users?_method=PUT" method="POST">
        {% include "admins/user/fields.njk"%}
        <input type="hidden" name="id" value={{user.id}}>
    </form>

    <script src="/scripts.js"></script>
{% endblock content %}
